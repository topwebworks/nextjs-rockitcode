# Week 5: Launch Pad Environment Variables with Supabase Integration
# Copy this file to .env.local and fill in your values

# Supabase Configuration (Primary Authentication & Database)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3002

# Optional: Direct Database Access
DATABASE_URL=your-database-connection-string

# Anti-Spam & Security Configuration
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds
MAX_SIGNUP_ATTEMPTS=3        # Max signups per IP per window
MAX_REQUESTS_PER_IP=10       # Max requests per IP per window
BLOCK_DISPOSABLE_EMAILS=true
REQUIRE_EMAIL_VERIFICATION=true
SPAM_SCORE_THRESHOLD=70      # Block emails with spam score above this
ENABLE_BOT_CHALLENGE=true    # Enable bot challenge for signups
CHALLENGE_FAILURE_THRESHOLD=3 # Max failed challenge attempts
HONEYPOT_ENABLED=true        # Enable honeypot fields
LOG_SECURITY_EVENTS=true     # Enable security event logging

# Legacy GitHub OAuth (if needed for fallback)
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# Legacy NextAuth (if needed for fallback)
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3002

# For production, update NEXTAUTH_URL to your domain
# NEXTAUTH_URL=https://yourdomain.com
